import mesa
print(f"Mesa version: {mesa.version}")

from mesa.visualization import SolaraViz, make_plot_component, make_space_component

# Import the local MoneyModel.py
from CityModel_SemaphoreAgent import City_Model_SemaphoreAgent

def agent_portrayal(agent):
    return {
        "color": "tab:blue",
        "size": 50,
    }

# Create initial model instance
model1 = CityModel_SemaphoreAgent(50, 24, 24)

proplayer_portrayal = {"buildings": {"color":"black", "colorbar": False}}
SpaceGraph = make_space_component(agent_portrayal, propertylayer_portrayal=proplayer_portrayal)

page = SolaraViz(
    model1,
    components=[SpaceGraph],
    name="Integrative Activity - Team7",
)
# This is required to render the visualization in the Jupyter notebook
page
